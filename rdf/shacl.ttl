# baseURI: https://github.com/usalu/semio/releases/download/2/semio.ttl#
# semio Vocabulary
# Version 2
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix se: <https://github.com/usalu/semio/releases/download/2/semio.ttl#> .
se:
  a owl:Ontology ;
  rdfs:label "semio Vocabulary"@en ;
  rdfs:comment "This vocabulary defines terms used in semio."@en ;
  sh:declare
    [
      sh:prefix "se" ;
      sh:namespace "https://github.com/usalu/semio/releases/download/2/semio.ttl#"^^xsd:anyURI ;
    ] ;
  sh:suggestedShapesGraph <http://www.w3.org/ns/shacl-shacl#> ;
.
se:Archive
  a sh:NodeShape ;
  sh:name "Archive"@en ;
  sh:description "An archive is a container for a bundle of related artifacts."@en ;
  sh:targetObjectsOf se:archive ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the archive."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ;
  sh:property
    [
      sh:path se:explanation ;
      sh:name "explanation"@en ;
      sh:description "An explanation of the archive."@en ;
      sh:datatype rdf:langString ;
      sh:maxCount 1 ;
      sh:uniqueLang true ;
    ] ;
  sh:property
    [
      sh:path se:type ;
    ] ;
  sh:property
    [
      sh:path se:formation ;
    ] ;
.
se:Type
  a sh:NodeShape ;
  sh:name "Type"@en ;
  sh:description "A type is a reusable definition for an object. In CAD lingo a type is a block (definition)."@en ;
  sh:targetObjectsOf se:type ;
  sh:property
  [
    sh:path se:property ;
    sh:name "property"@en ;
    sh:description "A property for the type."@en ;
  ] ;
.
se:Property
  a sh:NodeShape ;
  sh:targetObjectsOf se:property ;
  sh:property
  [
    sh:path se:name ;
    sh:name "name"@en ;
    sh:description "The name of the property."@en ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
  ] ;
.
se:BlobProperty
  a sh:NodeShape ;
  sh:name "blob property"@en ;
  sh:description "A binary large object (blob) property is any data that is not in rdf."@en ;
  sh:and (
    se:Property
      [
        sh:path se:value ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
      ] ;
      [
        # TODO: Create encoding enum
        sh:path se:encoding ;
        sh:name "encoding"@en ;
        sh:description "The encoding format of the blob property."@en ;
      ]
      [
        # TODO: Create schema enum
        sh:path se:serialization ;
        sh:name "serialization"@en ;
        sh:description "The serialization format of the blob property."@en ;
      ]
      [
        sh:path se:schema ;
        sh:name "schema"@en ;
        sh:description "The schema of the blob property."@en ;
        sh:datatype xsd:string ;
      ]
  ) ;
.
se:IntegerProperty
  a sh:NodeShape ;
  sh:name "integer property"@en ;
  sh:description "A binary large object (blob) property is any data that is not in rdf."@en ;
  sh:and (
    se:Property
      [
        sh:path se:value ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
      ] ;
      [
        # TODO: Create encoding enum
        sh:path se:encoding ;
        sh:name "encoding"@en ;
        sh:description "The encoding format of the blob property."@en ;
      ]
      [
        # TODO: Create schema enum
        sh:path se:serialization ;
        sh:name "serialization"@en ;
        sh:description "The serialization format of the blob property."@en ;
      ]
      [
        sh:path se:schema ;
        sh:name "schema"@en ;
        sh:description "The schema of the blob property."@en ;
        sh:datatype xsd:string ;
      ]
  ) ;
.

se:Value
  a sh:NodeShape ;
  sh:targetObjectsOf se:value ;
  sh:or (
    [
      sh:name "decimal value"@en ;
      sh:description "Decimal value of the property."@en ;
      sh:datatype xsd:double ;
    ]
    [
      sh:name "integer value"@en ;
      sh:description "Integer value of the property."@en ;
      sh:datatype xsd:integer ;
    ]
    [
      sh:name "text value"@en ;
      sh:description "text value of the property."@en ;
      sh:datatype xsd:string ;
    ]
  ) ;
.
