# baseURI: https://github.com/usalu/semio/releases/download/2/semio.ttl#
# semio Vocabulary
# Version 2
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix se: <https://github.com/usalu/semio/releases/download/2/semio.ttl#> .
se:
  a owl:Ontology ;
  rdfs:label "semio Vocabulary"@en ;
  rdfs:comment "This vocabulary defines terms used in semio."@en ;
  sh:declare
    [
      sh:prefix "se" ;
      sh:namespace "https://github.com/usalu/semio/releases/download/2/semio.ttl#"^^xsd:anyURI ;
    ] ;
  sh:suggestedShapesGraph <http://www.w3.org/ns/shacl-shacl#> ;
.
se:Archive
  a sh:NodeShape ;
  sh:name "Archive"@en ;
  sh:description "An archive is a container for a bundle of related artifacts."@en ;
  sh:targetObjectsOf se:archive ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the archive."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:explanation ;
      sh:name "explanation"@en ;
      sh:description "An explanation of the archive."@en ;
      sh:datatype rdf:langString ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:type ;
    ] ,
    [
      sh:path se:formation ;
    ] ;
.
se:Type
  a sh:NodeShape ;
  sh:name "Type"@en ;
  sh:description "A type is a reusable definition for an object. In CAD lingo a type is a block (definition)."@en ;
  sh:targetObjectsOf se:type ;
  sh:property
    [
    sh:path se:name ;
    sh:name "name"@en ;
    sh:description "The name of the type."@en ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
    ] ,
    [
    sh:path se:explanation ;
    sh:name "explanation"@en ;
    sh:description "An explanation of the type."@en ;
    sh:datatype rdf:langString ;
    sh:uniqueLang true ;
    ] ,
    [
      sh:path se:property ;
      sh:name "property"@en ;
      sh:description "A property for the type."@en ;
    ] ;
.
se:DecimalNumberProperty
  a sh:NodeShape ;
  sh:name "decimal number property"@en ;
  sh:description "A decimal number property is real number with floating point arithmetic."@en ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the decimal number property."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:value ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:datatype xsd:double ; 
    ] ;
.
se:IntegerProperty
  a sh:NodeShape ;
  sh:name "integer property"@en ;
  sh:description "An integer number (whole number) property."@en ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the integer number property."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:value ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:datatype xsd:integer ;
    ] ;
.
se:NaturalNumberProperty
  a sh:NodeShape ;
  sh:name "natural number property"@en ;
  sh:description "A natural number property is positive (=not zero or negative) integer (=no decimals) number."@en ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the natural number property."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:value ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:datatype xsd:positiveInteger ; 
    ] ;
.
se:ChoiceProperty
  a sh:NodeShape ;
  sh:name "choice property"@en ;
  sh:description "A choice property is a textual value which represents one choice from a known finite amount of possible choises."@en ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the natural number property."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:value ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ;
.
se:BlobProperty
  a sh:NodeShape ;
  sh:name "blob property"@en ;
  sh:description "A binary large object (blob) property is any data that is not in rdf."@en ;
  sh:property
    [
      sh:path se:name ;
      sh:name "name"@en ;
      sh:description "The name of the natural number property."@en ;
      sh:datatype rdf:langString ;
      sh:minCount 1 ;
      sh:uniqueLang true ;
    ] ,
    [
      sh:path se:value ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:nodeKind sh:IRI ;
    ] ,
    [
      # TODO: Create encoding enum
      sh:path se:encoding ;
      sh:name "encoding"@en ;
      sh:description "The encoding format of the blob property."@en ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ,
    [
      # TODO: Create schema enum
      sh:path se:serialization ;
      sh:name "serialization"@en ;
      sh:description "The serialization format of the blob property."@en ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ,
    [
      sh:path se:schema ;
      sh:name "schema"@en ;
      sh:description "The schema of the blob property."@en ;
      sh:nodeKind sh:IRI ; 
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ;
.